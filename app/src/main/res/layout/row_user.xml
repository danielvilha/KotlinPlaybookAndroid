<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/image" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:contentDescription="@string/app_name"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/image" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            tools:text="@string/app_name" android:textSize="18sp" android:textStyle="bold"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginTop="8dp"
            tools:text="@string/app_name"
            app:layout_constraintEnd_toEndOf="@+id/name" app:layout_constraintStart_toEndOf="@+id/imageViewEmail"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            app:layout_constraintTop_toBottomOf="@+id/email"
            android:layout_marginTop="8dp"
            tools:text="@string/app_name" app:layout_constraintEnd_toEndOf="@+id/name"
            app:layout_constraintStart_toEndOf="@+id/imageViewPhone" android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/website"
            app:layout_constraintTop_toBottomOf="@+id/phone"
            tools:text="@string/app_name" app:layout_constraintEnd_toEndOf="@+id/name"
            android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/imageViewWebsite"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/company"
            app:layout_constraintTop_toBottomOf="@+id/website"
            android:layout_marginTop="8dp"
            tools:text="@string/app_name" app:layout_constraintEnd_toEndOf="@+id/name"
            app:layout_constraintStart_toEndOf="@+id/imageViewLocation" android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            app:layout_constraintTop_toBottomOf="@+id/company"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/name"
            tools:text="@string/app_name" app:layout_constraintEnd_toEndOf="@+id/name"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@android:drawable/ic_dialog_email"
            android:id="@+id/imageViewEmail"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintBottom_toBottomOf="@+id/email" app:layout_constraintTop_toTopOf="@+id/email"
            android:contentDescription="@string/app_name" android:tint="@android:color/black"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@android:drawable/ic_menu_call"
            android:id="@+id/imageViewPhone"
            app:layout_constraintTop_toTopOf="@+id/phone" app:layout_constraintBottom_toBottomOf="@+id/phone"
            app:layout_constraintStart_toStartOf="@+id/name" android:tint="@android:color/black"
            android:contentDescription="@string/app_name"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/ic_website"
            android:id="@+id/imageViewWebsite"
            app:layout_constraintTop_toTopOf="@+id/website" app:layout_constraintBottom_toBottomOf="@+id/website"
            app:layout_constraintStart_toStartOf="@+id/name" android:contentDescription="@string/app_name"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@android:drawable/ic_menu_mylocation"
            android:id="@+id/imageViewLocation"
            app:layout_constraintTop_toTopOf="@+id/company" app:layout_constraintBottom_toBottomOf="@+id/company"
            app:layout_constraintStart_toStartOf="@+id/name" android:contentDescription="@string/app_name"
            android:tint="@android:color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>